#!/bin/bash
# The following are default values.
# They can be overridden by supplying the -e VAR=value option to the containerizer.

# The timezone this container is running in
TIMEZONE=${TIMEZONE:-Europe/Berlin}

# User and group id for the user running server
PUID=${PUID:-1000}
PGID=${PGID:-1000}

# steam game appid
STEAMAPPID=${STEAMAPPID:-556450}

#dedicated server related values
SERVERIP=${SERVERIP:-0.0.0.0}
SERVERSTEAMPORT=${SERVERSTEAMPORT:-8766}
SERVERGAMEPORT=${SERVERGAMEPORT:-27015}
SERVERQUERYPORT=${SERVERQUERYPORT-27016}
SERVERNAME=${SERVERNAME:-the-forest-server-01}

SERVERPLAYERS=${SERVERPLAYERS:-8}
ENABLEVAC=${ENABLEVAC-on}
SERVERPASSWORD=${SERVERPASSWORD-}
SERVERPASSWORDADMIN=${SERVERPASSWORDADMIN-secret}
SERVERSTEAMACCOUNT=${SERVERSTEAMACCOUNT-}
SERVERAUTOSAVEINTERVAL=${SERVERAUTOSAVEINTERVAL-30}
DIFFICULTY=${DIFFICULTY-Normal}
INITTYPE=${INITTYPE-Continue}
SLOT=${SLOT-1}
SHOWLOGS=${SHOWLOGS-off}
SERVERCONTACT=${SERVERCONTACT-email@gmail.com}
VEGANMODE=${VEGANMODE-off}
VEGETARIANMODE=${VEGETARIANMODE-off}
RESETHOLESMODE=${RESETHOLESMODE-off}
TREEREGROWMODE=${TREEREGROWMODE-off}
ALLOWBUILDINGDESTRUCTION=${ALLOWBUILDINGDESTRUCTION-on}
ALLOWENEMIESCREATIVEMODE=${ALLOWENEMIESCREATIVEMODE-off}
ALLOWCHEATS=${ALLOWCHEATS-off}
REALISTICPLAYERDAMAGE=${REALISTICPLAYERDAMAGE-off}
